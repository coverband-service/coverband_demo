<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Formatted Title</th>
        <th>Body</th>
        <th>Published</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.formatted_title %></td>
          <td><%= post.body %></td>
          <td><%= post.published %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
  <br/>
  <%= link_to 'Destroy Bad Posts', destroy_bad_posts_posts_path, method: :post, data: { confirm: 'Are you sure?' } %>
  <br/>
  <%= link_to 'Dangerously Destroy Bad Posts', destroy_bad_dangerously_posts_path, method: :post, data: { confirm: 'Are you sure?' } %>
</div>
